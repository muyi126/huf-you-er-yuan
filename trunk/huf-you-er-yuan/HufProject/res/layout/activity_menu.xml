<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_blue_q"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="50dip"
            android:background="@drawable/shangbian_bg"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/jinji" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao_bg"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_xiaoche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="小 车 快 跑"
                    android:textColor="@color/font_blue_q"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_duodaoqibin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="夺 岛 奇 兵"
                    android:textColor="@color/font_blue_q"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/shangbian_bg"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/canyu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao_bg"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_zuijiutiyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="醉 酒 体 验"
                    android:textColor="@color/font_blue_q"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_monijiaoshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="模 拟 驾 驶"
                    android:textColor="@color/font_blue_q"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_minichengshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="MI Ni 城 市"
                    android:textColor="@color/font_blue_q"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dip"
            android:background="@color/font_white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_jifenduihuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/duihuan" />

            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/font_blue_q" />

            <ImageView
                android:id="@+id/iv_shujuqingkong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/qingkong" />
        </LinearLayout>

        <Button
            android:id="@+id/back"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_gravity="right"
            android:layout_marginRight="10dip"
            android:background="@drawable/back" />
    </LinearLayout>

