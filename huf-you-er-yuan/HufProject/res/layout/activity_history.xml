<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_blue_q"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:text="已发放积分"
        android:textColor="@color/font_blue_s"
        android:textSize="40px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="30dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/button_selector_l_top"
            android:gravity="center_horizontal"
            android:text="ID"
            android:textColor="@color/font_blue_s"
            android:textSize="25px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_selector_r_top"
            android:gravity="center_horizontal"
            android:text="积分"
            android:textColor="@color/font_blue_s"
            android:textSize="25px" />
    </LinearLayout>
    <!--
         <com.givon.huf.view.PullListView
        android:id="@+id/id_pull_listview"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:minHeight="200dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/button_selector_m"
        android:fadingEdge="none"
        android:visibility="visible" />
    -->

    <ListView
        android:id="@+id/id_pull_listview"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/button_selector_m"
        android:fadingEdge="none"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:divider="@android:color/transparent"  
        android:minHeight="200dip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/total_pople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/bg_selector_button"
        android:gravity="center_horizontal"
        android:textColor="@color/font_blue"
        android:textStyle="bold"
        android:textSize="25px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pri"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:layout_marginRight="5dip"
            android:layout_marginLeft="30dip"
            android:scaleType="centerInside"
            android:background="@drawable/shang" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="30dip"
            android:scaleType="centerInside"
            android:background="@drawable/xiao" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_clean"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="45dip"
        android:padding="5dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/qingchu_selector"
        android:text="清除数据"
        android:textColor="@color/font_white"
        android:textStyle="bold" />

</LinearLayout>