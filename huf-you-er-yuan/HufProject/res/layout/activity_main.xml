<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back001"
    android:orientation="vertical" >
    
    
    <TextView 
        android:id="@+id/biaoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    
    <Button 
        android:id="@+id/kaishi"
        android:layout_below="@id/biaoji"
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kaishi_button"
        />
    <Button 
        android:id="@+id/jilu"
        android:layout_below="@id/kaishi"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/julu_button"
        />
    
    <TextView 
        android:id="@+id/tv_Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_black"
        android:textSize="14px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        />
    <TextView 
        android:id="@+id/tv_Status"
        android:layout_above="@+id/tv_Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_black"
        android:layout_marginRight="5dip"
        android:textSize="14px"
        android:layout_alignParentRight="true"
        />
    <ProgressBar   
        android:id="@+id/progress_bar"   
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"   
        android:progress="0"  
        android:max="100"  
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"/>  

</RelativeLayout>