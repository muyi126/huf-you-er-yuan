<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_size"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/id_left_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/id_right_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/id_button_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@drawable/blue_back_icon"
        android:gravity="center"
        android:textColor="@color/font_black"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/id_right_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/id_button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/id_right_bar"
        android:layout_toRightOf="@+id/id_button_back" >

        <TextView
            android:id="@+id/id_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/font_black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/id_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:gravity="center"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>