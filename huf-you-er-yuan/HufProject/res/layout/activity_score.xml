<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back002"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/id"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:background="@drawable/id"
        android:ellipsize="start"
        android:enabled="false"
        android:gravity="right|center_vertical"
        android:paddingLeft="100dip"
        android:paddingRight="20dip"
        android:singleLine="true"
        android:textColor="@color/font_black" />

    <TextView
        android:id="@+id/z_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="120dip"
        android:textColor="@color/font_white"
        android:textSize="25px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/score"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/jifen"
        android:enabled="false"
        android:gravity="right|center_vertical"
        android:paddingLeft="100dip"
        android:paddingRight="20dip"
        android:singleLine="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dip"
        android:textColor="@color/font_white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/bt_50" />

        <Button
            android:id="@+id/bt_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/bt_100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/queren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/queren_button" />

        <Button
            android:id="@+id/cexiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/chexiao" />
    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_gravity="right"
        android:layout_marginRight="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/fanhui" />

</LinearLayout>